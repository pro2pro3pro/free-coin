<!doctype html><html><head><meta charset="utf-8"><title>Admin</title><link rel="stylesheet" href="/public/style.css"></head><body>
<div class="container"><h1>Admin Dashboard</h1>
<% if (msg) { %><p style="color:lightgreen"><%= msg %></p><% } %>
<form method="post" action="/admin/do">
  <label>Secret: <input name="secret" type="password" required></label><br/><br/>
  <label>User ID: <input name="user_id" required></label><br/>
  <label>Coin type:
    <select name="coin_type"><option value="normal">Normal</option><option value="vip">VIP</option></select>
  </label><br/>
  <label>Amount: <input name="amount" type="number" value="0"></label><br/><br/>
  <button type="submit">Submit</button>
</form>
<p><a href="/admin/logs">Xem logs</a></p>
</div></body></html>